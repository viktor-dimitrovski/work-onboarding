# Deployment config for deploy/ubuntu/*.sh

# App location (default: repo root from which scripts are executed)
# APP_DIR=/opt/my-onboarding

# Linux service user/group
APP_USER=onboarding
APP_GROUP=onboarding

# PostgreSQL local superuser OS account
POSTGRES_OS_USER=postgres

# App database settings
DB_NAME=onboarding
DB_USER=onboarding_app
DB_PASSWORD=onboarding_app_dev_password

# App runtime ports
BACKEND_PORT=8001
FRONTEND_PORT=3001
BACKEND_WORKERS=3

# Backend app config
APP_ENV=production
CORS_ORIGINS=http://localhost:3001
FIRST_ADMIN_EMAIL=super.admin@example.com
FIRST_ADMIN_PASSWORD=ChangeMe123!
FRONTEND_BASE_URL=http://localhost:3001

# Optional fixed JWT secrets (if blank, scripts generate random values)
JWT_SECRET_KEY=
JWT_REFRESH_SECRET_KEY=

# Frontend runtime settings
NEXT_PUBLIC_API_BASE_URL=/api/v1
BACKEND_API_URL=http://127.0.0.1:8001

# OAuth provider credentials (optional)
MICROSOFT_TENANT=common
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
BASE_DOMAINS=app.com
RESERVED_SUBDOMAINS=admin,billing,docs,status,api
DEFAULT_TENANT_SLUG=
TRUST_PROXY_HEADERS=true

# Nginx reverse proxy settings
INSTALL_NGINX=true
DOMAIN=_
NGINX_SITE_NAME=onboarding

# Seed demo data (false recommended for production)
SEED_DEMO=false
